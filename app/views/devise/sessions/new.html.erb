<div class="main-container">
  <div class="container">
    <div class="row">
      <div class="col-sm-5 login-box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="panel panel-default">
          <div class="panel-intro text-center">
            <h2 class="logo-title">
              <!-- Original Logo will be placed here  -->
              <span class="logo-icon"><i class="icon icon-search-1 ln-shadow-logo shape-0"></i> </span> AG<span>EXCHANGE </span>
            </h2>
          </div>
          <div class="panel-body">
            <div class="form-group">
              <%= f.label :email, 'Email:', class: 'control-label' %>
              <div class="input-icon"><i class="icon-user fa"></i>
                <%= f.email_field :email, autofocus: true, class: 'form-control email', placeholder: 'Email' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.label :password, 'Password:', class: 'control-label' %>

              <div class="input-icon"><i class="icon-lock fa"></i>
                <%= f.password_field :password, autocomplete: 'off', class: 'form-control', placeholder: 'Password' %>
              </div>
            </div>
            <div class="form-group">
              <%= f.submit 'Login', class: 'btn btn-primary btn-block' %>
            </div>
          </div>
          <div class="panel-footer">

            <div class="checkbox pull-left">
              <label> <%= f.check_box :remember_me %> Keep me logged in</label>
            </div>

            <p class="text-center pull-right"><%= link_to "Lost your password?", new_password_path(resource_name) %></p>

            <div style=" clear:both"></div>
          </div>
        </div>
        <div class="login-box-btm text-center">
          <p> Don't have an account? <br>
            <strong><%= link_to "Sign Up!", new_registration_path(resource_name) %></strong></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>